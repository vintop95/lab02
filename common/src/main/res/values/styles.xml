<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="constraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <style name="backgroundImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/image_background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="frameLayoutBackgroundStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>


    <style name="circleUserPhotoStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/background_avatar</item>
        <item name="android:contentDescription">@string/image_profile_photo</item>
        <item name="android:elevation">2dp</item>
        <item name="layout_constraintDimensionRatio">w,1:1</item>
        <item name="srcCompat">@drawable/ic_person_black_24dp</item>
    </style>


    <style name="circleChangePhotoStyle">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/background_icon_add_photo</item>
        <item name="android:contentDescription">@string/image_profile_change</item>
        <item name="android:elevation">2dp</item>
        <item name="layout_constraintDimensionRatio">w,1:1</item>
    </style>

    <style name="textOnBackgroundStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="innerDividerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>



    <style name="smallLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="standardTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <style name="standardTextStyle.longText" parent="standardTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">@integer/max_view_length_bio</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>


    <style name="standardInputStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="standardInputStyle.name" parent="standardInputStyle">
        <item name="android:hint">@string/hint_name</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">@integer/max_length_name</item>
    </style>



    <style name="standardInputStyle.phone" parent="standardInputStyle">
        <item name="android:hint">@string/hint_phone</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">@integer/max_length_name</item>
    </style>



    <style name="standardInputStyle.mail" parent="standardInputStyle">
        <item name="android:hint">@string/hint_mail</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLength">@integer/max_length_mail</item>
    </style>

    <style name="standardInputStyle.password" parent="standardInputStyle">
        <item name="android:hint">@string/hint_password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">@integer/max_length_password</item>
    </style>



    <style name="standardInputStyle.city" parent="standardInputStyle">
        <item name="android:hint">@string/hint_city</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">@integer/max_length_address</item>
    </style>



    <style name="standardInputStyle.address" parent="standardInputStyle">
        <item name="android:hint">@string/hint_address</item>
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:maxLength">@integer/max_length_address</item>
    </style>



    <style name="standardInputStyle.bio" parent="standardInputStyle">
        <item name="android:hint">@string/hint_bio</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">@integer/max_length_bio</item>
    </style>



    <style name="standardInputStyle.restaurant_type" parent="standardInputStyle">
        <item name="android:hint">@string/hint_restaurant_type</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">25sp</item>
    </style>
</resources>
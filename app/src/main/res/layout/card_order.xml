<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/txt_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="--:--"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/label_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="Delivery Time"
            card_view:layout_constraintEnd_toEndOf="@+id/txt_delivery_time"
            card_view:layout_constraintStart_toStartOf="@+id/txt_delivery_time"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_delivery_time" />

        <TextView
            android:id="@+id/label_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Order Number"
            card_view:layout_constraintStart_toEndOf="@+id/txt_delivery_time"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            card_view:layout_constraintStart_toStartOf="@+id/label_order_number"
            card_view:layout_constraintTop_toBottomOf="@+id/label_order_number" />

        <Button
            android:id="@+id/button"
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24px"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Customer Name"
            card_view:layout_constraintStart_toStartOf="@+id/label_order_number"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_order_number" />

        <TextView
            android:id="@+id/txt_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            card_view:layout_constraintStart_toStartOf="@+id/label_customer_name"
            card_view:layout_constraintTop_toBottomOf="@+id/label_customer_name" />

        <TextView
            android:id="@+id/label_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:text="Customer Phone"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.181"
            card_view:layout_constraintStart_toEndOf="@+id/label_customer_name"
            card_view:layout_constraintTop_toTopOf="@+id/label_customer_name" />

        <TextView
            android:id="@+id/txt_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text View"
            card_view:layout_constraintStart_toStartOf="@+id/label_customer_phone"
            card_view:layout_constraintTop_toBottomOf="@+id/label_customer_phone" />

        <TextView
            android:id="@+id/label_total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Items"
            card_view:layout_constraintStart_toStartOf="@+id/label_customer_name"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_customer_name" />

        <TextView
            android:id="@+id/txt_total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/label_total_items"
            card_view:layout_constraintTop_toBottomOf="@+id/label_total_items" />

        <TextView
            android:id="@+id/label_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order State"
            card_view:layout_constraintStart_toStartOf="@+id/label_customer_phone"
            card_view:layout_constraintTop_toTopOf="@+id/label_total_items" />

        <TextView
            android:id="@+id/txt_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/label_order_state"
            card_view:layout_constraintTop_toBottomOf="@+id/label_order_state" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/background_light" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_photo_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/food_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Food Nameee"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/food_item_place"
            app:layout_constraintEnd_toStartOf="@+id/food_img_modify"
            app:layout_constraintStart_toEndOf="@+id/food_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/food_item_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Food Place afsdhjgjgjgjlkjljk;kl;kl;kl"
            app:layout_constraintBottom_toTopOf="@+id/food_item_price"
            app:layout_constraintEnd_toStartOf="@+id/food_img_modify"
            app:layout_constraintStart_toEndOf="@+id/food_item_image"
            app:layout_constraintTop_toBottomOf="@+id/food_item_name" />

        <TextView
            android:id="@+id/food_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="$ 10"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/food_img_delete"
            app:layout_constraintStart_toEndOf="@+id/food_item_image"
            app:layout_constraintTop_toBottomOf="@+id/food_item_place" />

        <ImageView
            android:id="@+id/food_img_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="5"
            android:alpha="0.3"
            android:src="@drawable/ic_mode_edit_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/food_img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:alpha="0.3"
            android:src="@drawable/ic_delete_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
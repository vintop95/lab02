<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.polito.mad1819.group17.deliveryapp.customer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".RateActivity"></activity>
        <activity
            android:name=".orders.OrderDetailsActivity"
            android:label="@string/title_activity_order_details" />
        <activity
            android:name=".restaurants.shoppingcart.OrderConfirmActivity"
            android:label="@string/title_activity_confirm_order" />
        <activity
            android:name=".restaurants.dailyoffers.DailyMenuActivity"
            android:label="@string/title_activity_daily_offers" />
        <activity
            android:name=".restaurants.RestaurantsActivity"
            android:label="@string/title_activity_restaurants"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".restaurants.RestaurantProfileActivity"
            android:label="@string/title_activity_restaurant_profile" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".profile.EditProfileActivity" />
    </application>

</manifest>